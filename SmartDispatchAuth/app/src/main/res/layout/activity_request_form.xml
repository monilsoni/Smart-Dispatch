<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:translationZ="10dp">

        <TextView
            android:id="@+id/formHeading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:paddingTop="13dp"
            android:text="Smart Dispatch"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/relativeLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/typeHeading"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorPrimaryDark"
                android:translationZ="2dp">

                <View
                    android:id="@+id/divider"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#FFF" />

                <TextView
                    android:id="@+id/emergencyType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Type Of Emergency"
                    android:textColor="#FFF"
                    android:textSize="14dp"
                    android:layout_toRightOf="@+id/divider"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/typeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#FEFEFE"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:translationZ="2dp"
                android:layout_below="@+id/typeHeading">

                <CheckBox
                    android:id="@+id/checkBox_medical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif"
                    android:text="Medical Emergency"
                    android:textColor="@color/ColorSecondary"
                    android:textSize="14dp"/>

                <CheckBox
                    android:id="@+id/checkBox_fire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif"
                    android:text="Fire Emergency"
                    android:textColor="@color/ColorSecondary"
                    android:textSize="14dp"
                    android:layout_below="@+id/checkBox_medical" />

                <CheckBox
                    android:id="@+id/checkBox_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif"
                    android:text="Other"
                    android:textColor="@color/ColorSecondary"
                    android:textSize="14dp"
                    android:layout_below="@+id/checkBox_fire"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/severityLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/typeLayout">

                <RelativeLayout
                    android:id="@+id/severityHeading"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="horizontal"
                    android:translationZ="2dp">

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="#FFF" />

                    <TextView
                        android:id="@+id/severityText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="13dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Severity"
                        android:textColor="#FFF"
                        android:textSize="14dp"
                        android:layout_toRightOf="@+id/divider2"/>

                </RelativeLayout>

                <SeekBar
                    android:id="@+id/seekBar_severity"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:max="3"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:progress="1"
                    android:layout_below="@+id/severityHeading"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#FEFEFE"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:text="Description"
                    android:textColor="@color/ColorSecondary"
                    android:translationZ="5dp"
                    android:layout_below="@+id/seekBar_severity"
                    android:fontFamily="sans-serif"/>
            </RelativeLayout>



            <Button
                android:id="@+id/sendrequestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="12dp"
                android:background="@color/colorPrimaryDark"
                android:text="Send Request"
                android:textColor="#FFF"
                android:layout_below="@+id/severityLayout"
                android:fontFamily="sans-serif"/>

            <Button
                android:id="@+id/sendSMSButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="12dp"
                android:background="@color/colorPrimaryDark"
                android:text="Send SMS Request"
                android:textColor="#FFF"
                android:layout_below="@+id/sendrequestButton"
                android:fontFamily="sans-serif"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
